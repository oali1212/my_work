#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n ;
    printf("insert the height \n") ;
    scanf("%d",&n) ;
    int s ;
    s= 2*n-1 ;


for(int i=1 ; i<n+1 ; i++)
{
   for(int k=n; k>i ; k--)
{
    printf("   ");
}


for(int j=1; j<=2*i-1 ; j++)
{
    printf(" * ") ;

}




  printf("\n\n")   ;
}




}
